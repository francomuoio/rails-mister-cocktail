<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-1 col-md-4 col-md-offset-4">
      <%= simple_form_for [@cocktail] do |f| %>
      <%= f.input :name %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit "ajouter un cocktail", class: "btn btn-primary" %>
      <%= link_to "home", cocktails_path, class: "btn btn-primary text-center" %>
      <% end %>
    </div>
  </div>
</div>
